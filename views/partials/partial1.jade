h2#login {{message}}
form(method='POST', novalidate, id='loginForm', name='userForm')
  .formfield
    .formfield--prompt Username:
    input#username(type='text', name='username', ng-model='user.username')
  .formfield
    .formfield--prompt Password:
    input#password(type='password', name='password', ng-model='user.password')
    br
    input.submitButton.log(type='submit', ng-click='login()')
